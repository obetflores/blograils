<h1>Categorias</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-default' %>
          <%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Desea eliminar?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear categoria', new_category_path, class: 'btn btn-default' %>
